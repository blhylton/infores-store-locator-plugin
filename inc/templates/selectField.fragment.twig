<select id="{{ id }}" name="{{ id }}">
    <option {{ value == '' ? 'selected' }}>&mdash; Select a Post Type &mdash;</option>
    {% for option in options %}
        <option value="{{ option.name }}" {{ option.name == value ? 'selected' }}>
            {{ option.label }}
        </option>
    {% endfor %}
</select>

{% if helper is defined and helper is not empty %}
    <span class="helper">{{ helper }}</span>
{% endif %}

{% if supplemental is defined and supplemental is not empty %}
    <p class="description">{{ supplemental }}</p>
{% endif %}

